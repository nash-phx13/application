<h1>新規投稿</h1>
<% if @list.errors.any? %>
  <%= @list.errors.count %>件のエラーが発生しました
  <% @list.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>


<%= form_with model: @list, url:'/todolists', local:true do |l| %>
<h3>題名</h3>
<%= l.text_field :title %>
<h4>本文</h4>
<%= l.text_area :body %>
<h4>画像</h4>
<%= l.attachment_field :image %>

<%= l.submit'投稿する'%>
<% end %>

